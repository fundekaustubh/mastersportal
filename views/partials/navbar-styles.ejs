<style>
    :root {
        --nav-icon-width: 50px;
        --nav-border-width: 8px;
    }

    html,
    body {
        height: 100%;
        margin: 0;
        font-family: sans-serif;
        padding-top: 25px;
        overflow: hidden;
    }

    #navbar {
        display: flex;
        position: absolute;
        top: 0;
        background-color: #ffa9a9;
        width: 100%;
        z-index: 1;
        height: 50px;
        align-content: center;
        justify-content: center;
    }

    #navbar>button {
        font-family: 'Bebas Neue', cursive;
        background-color: transparent;
        font-size: 30px;
        border: none;
        cursor: pointer;
    }

    #navbar>button:hover {
        background-color: #ff8f8f;
        cursor: pointer;
        transition: background-color 0.2s ease-in;
    }

    .page-container {
        height: inherit;
        display: flex;
    }

    .main {
        /* display: flex; */
        flex-wrap: wrap;
        display: flex;
        justify-content: center;
        width: 100%;
        height: 100%;
        /* height: inherit; */
        padding: 20px;
        padding-left: calc(var(--nav-border-width) + 20px);
        overflow-y: auto;
    }

    .nav {
        width: 200px;
        height: inherit;
        position: relative;
        background-color: #eeeeee;
        transition: width 0.2s;
        flex-shrink: 0;
    }

    .nav--collapsed {
        width: var(--nav-icon-width);
    }

    .nav--collapsed .nav__label {
        display: none;
    }

    .nav__link {
        text-decoration: none;
        display: flex;
        align-items: center;
        color: rgba(0, 0, 0, 0.75);
    }

    .nav__link:hover {
        background-color: #dddddd;
    }

    .nav__icon-container {
        width: var(--nav-icon-width);
        height: var(--nav-icon-width);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .nav__label {
        white-space: nowrap;
    }

    .nav__border {
        position: absolute;
        left: 100%;
        top: 0;
        width: var(--nav-border-width);
        height: inherit;
        background-color: #dddddd;
        transition: background-color 0.2s;
        cursor: ew-resize;
    }

    .nav__border:hover {
        background-color: #cccccc;
    }

    section {
        position: relative;
    }

    section>a>img {
        padding-top: 10px;
        height: 70%;
        width: 100%;
    }

    main>section {
        flex: 1 0 30%;
        margin: 5px;
        height: 50%;
        padding: 10px;
        border-radius: 10px;
        background-color: rgb(228, 222, 222);
        text-align: center;
        margin: 10px;
    }

    main>section:hover {
        cursor: pointer;
        border-radius: 0px;
        background-color: #b1b1b1;
        transition: background-color 0.2s ease-in;
    }

    /* .header {
            text-align: center;
            font-family: 'Cinzel', serif;
        } */

    #pageHeader {
        width: 100%;
        text-align: center;
        height: max-content;
        font-family: 'Bebas Neue', cursive;
        font-size: 28px;
    }

    .header2 {
        font-family: 'Roboto', sans-serif;
        font-size: 24px;
        text-decoration: bold;
    }

    .header3 {
        font-family: 'Roboto', sans-serif;
        font-size: 22px;
        text-decoration: bold;
    }

    .header4 {
        font-family: 'Roboto', sans-serif;
        font-size: 20px;
        text-decoration: bold;
    }

    .content {
        font-family: 'Roboto', sans-serif;
        font-size: 18px;
    }

    #cardHeader {
        text-align: center;
        font-family: 'Roboto', sans-serif;
    }

    .card>a {
        color: black;
        text-decoration: none;
    }
</style>